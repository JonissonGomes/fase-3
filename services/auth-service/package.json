{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Serviço de autenticação e gerenciamento de usuários",
  "main": "src/server.js",
  "scripts": {
    "start": "node -e \"console.log('Starting auth-service...'); console.log('NODE_ENV:', process.env.NODE_ENV); console.log('PORT:', process.env.PORT); console.log('MONGODB_URI:', process.env.MONGODB_URI ? 'SET' : 'NOT SET');\" && node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node src/database/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "mongoose-paginate-v2": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "authentication",
    "microservice",
    "jwt",
    "mongodb"
  ],
  "author": "Plataforma de Revenda",
  "license": "MIT"
}
