# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================
# Copie este arquivo para .env.prod e ajuste os valores

# ========================================
# CONFIGURAÇÕES GERAIS
# ========================================
NODE_ENV=production
LOG_LEVEL=info

# ========================================
# SEGURANÇA
# ========================================
# IMPORTANTE: Altere esta chave para uma string aleatória e segura
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_mude_para_producao

# ========================================
# BANCO DE DADOS MONGODB
# ========================================
# Para MongoDB local
MONGO_USER=admin
MONGO_PASSWORD=sua_senha_mongodb_segura_aqui

# Para MongoDB Atlas (recomendado para produção)
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/revenda_veiculos?retryWrites=true&w=majority

# ========================================
# FRONTEND (quando implementado)
# ========================================
FRONTEND_URL=https://seu-dominio.com

# ========================================
# PORTA DOS SERVIÇOS
# ========================================
AUTH_SERVICE_PORT=3001
VEHICLES_SERVICE_PORT=3002
ORDERS_SERVICE_PORT=3003

# ========================================
# CONFIGURAÇÕES DE REDE
# ========================================
# URLs internas dos serviços (para comunicação entre microserviços)
VEHICLES_SERVICE_URL=http://vehicles-service:3002

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ========================================
# Número máximo de conexões com o MongoDB
MONGODB_MAX_POOL_SIZE=10

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA ADICIONAIS
# ========================================
# Tempo de expiração do token JWT (em segundos)
JWT_EXPIRES_IN=86400

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
# Habilitar métricas de saúde
ENABLE_HEALTH_CHECK=true

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
# Frequência de backup automático (em horas)
BACKUP_INTERVAL=24

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
# Número máximo de requisições por minuto por IP
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100 